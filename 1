<%= form_for([@setting, @setting.triggers.build]) do |f| %>
  <div class="field">
    <%= f.label :when %>
    <%= f.datetime_select :when %>
  </div>
  <div class="field">
    <%= f.label :action %>
    <%= f.select :action, options_for_select([['Send mail', 1],['Delete old', 2]]) %>
  </div>
  <div class="field">
    <%= f.label :time_treshold %>
    <%= f.number_field :time_treshold %>
  </div>
  <div class="field">
    <%= f.label :total_treshold %>
    <%= f.number_field :total_treshold %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
